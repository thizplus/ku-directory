# Flask settings
FLASK_ENV=development
DEBUG=true
HOST=0.0.0.0
PORT=5000

# InsightFace model settings
# Available models: buffalo_l (large), buffalo_s (small), buffalo_sc (small with CPU)
INSIGHTFACE_MODEL=buffalo_l
DET_SIZE=640

# Processing settings
MAX_FACES=50
MIN_CONFIDENCE=0.5

# Image settings
MAX_IMAGE_SIZE=10485760  # 10MB in bytes

# GPU settings
USE_GPU=true
GPU_ID=0
